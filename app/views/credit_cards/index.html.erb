<%= link_to "Home", root_path %>
<h1>Your Credit Cards</h1>

<% if @user.credit_cards.any? %>
  <ul>
    <% @user.credit_cards.each do |credit_card| %>
      <li>
        <%= credit_card.card_number %> - <%= credit_card.expiration_date.strftime('%m/%Y') %>
        <%= link_to 'Delete', user_credit_card_path(@user, credit_card), method: :delete, data: { confirm: "Are you sure you want to delete this card?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You don't have any credit cards.</p>
<% end %>

<%= link_to 'Add a new Credit Card', new_user_credit_card_path(@user) %>

