<%= link_to "Home", root_path %>
<h1>Showtime Details</h1>

<p><strong>Movie:</strong> <%= @show.movie.title %></p>
<p><strong>Date:</strong> <%= @show.date %></p>
<p><strong>Time:</strong> <%= @show.time.strftime('%H:%M') %></p>
<p><strong>Seats Available:</strong> <%= @show.seats_available %></p>
<p><strong>Ticket Price:</strong> $<%= @show.ticket_price %></p>

<% if current_user %>
  <%= link_to "Book Ticket", new_movie_show_ticket_path(@show.movie, @show), class: "btn btn-primary" %>
<% end %>
<% if current_user.admin? %>
  <%= link_to 'Edit', edit_movie_show_path(@show.movie, @show), class: "btn btn-warning" %>
  <%= button_to 'Delete', movie_show_path(@show.movie, @show), method: :delete, data: { confirm: 'Are you sure you want to delete this showtime?' }, class: "btn btn-danger" %>
<% end %>

<%= link_to 'Back to Showtimes', movie_shows_path(@show.movie) %>
