<%= link_to "Home", root_path %>
<h1><%= @movie.title %></h1>
<p>Genre: <%= @movie.genre %></p>
<p>Rating: <%= @movie.rating %></p>
<p>Duration: <%= @movie.duration %> minutes</p>
<p>Language: <%= @movie.language %></p>
<p>Release Date: <%= @movie.release_date.strftime('%B %d, %Y') %></p>


<% if @movie.release_date <= Date.today %>
  <%= link_to 'View Showtimes', movie_shows_path(@movie) %> |
<% else %>
  <p>Showtimes are not available for this movie yet.</p>
<% end %>
<% if current_user.admin? %>
  <%= link_to 'Edit Movie', edit_movie_path(@movie) %> |
  <%= button_to 'Delete Movie', movie_path(@movie), method: :delete, data: { confirm: 'Are you sure you want to delete this movie?' } %>
<% end %>
<%= link_to 'Back to Movies', movies_path %>
